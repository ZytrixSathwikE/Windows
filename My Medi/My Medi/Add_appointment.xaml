<UserControl x:Class="My_Medi.Add_appointment"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:Microsoft.Phone.Controls;assembly=Microsoft.Phone.Controls.Toolkit" 
    
    xmlns:my1="clr-namespace:System.Windows.Controls;assembly=WindowsPhoneWatermarkTextBoxControl"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignHeight="380" d:DesignWidth="380">
    
    
    <Grid x:Name="LayoutRoot" Background="{StaticResource PhoneChromeBrush}">
        <StackPanel x:Name="Root"  Width="380" Height="380" Background="Red">
            <TextBlock Text="Check In Details" Margin="20,20,0,20" Foreground="AntiqueWhite" />
            <my1:WatermarkTextBox Name="watermarkTextBox" Height="72" Margin="0,0,0,0" WatermarkText="Doctor..." HorizontalAlignment="Left" Width="350" />
            <local:DatePicker x:Name="datepick" ValueChanged="DatePicker_ValueChanged" Margin="0,0,0,0" ValueStringFormat="{}{0:yyyy-MM-dd}"   />
            <Button x:Name="btnOK" Content="Submit" Margin="0,60,0,0" Click="btnOK_Click"/>

        </StackPanel>
    </Grid>
</UserControl>